<Window x:Class="MythicMobs_edit.WPF.Other.DamageModifiersChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MythicMobs_edit.WPF.Other"
        mc:Ignorable="d"
        Title="伤害来源修改" Height="88" Width="196" Icon="/MythicMobs_edit;component/icon.ico" ResizeMode="NoResize">
    <Grid Background="Black">
        <Label Content="伤害来源" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource Label}"/>
        <Label Content="伤害值" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource Label}" Margin="0,30,0,0"/>

        <ComboBox HorizontalAlignment="Left" Margin="63,3,0,0" VerticalAlignment="Top" Width="120" Style="{StaticResource ComboBoxStyle}"
                  Text="{Binding DamageModifiers.Type}" Name="Type" Height="20"/>

        <TextBox HorizontalAlignment="Left" Margin="51,33,0,0" TextWrapping="Wrap" Text="{Binding DamageModifiers.set}" VerticalAlignment="Top"
                   Style="{StaticResource TextBox}" Width="132" Height="20"/>
    </Grid>
</Window>
