<UserControl x:Class="MythicMobs_edit.WPF.Mob.MAGMA_CUBE"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MythicMobs_edit.WPF.Mob"
             mc:Ignorable="d" Height="290" Width="290">
    <Grid>
        <Label Content="岩浆怪设置" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource Label}"/>
        <Label Content="岩浆怪尺寸" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Style="{StaticResource Label}"/>
        
        <CheckBox Content="阻止分裂" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top"
                  IsChecked="{Binding obj.PreventSlimeSplit}" Style="{StaticResource Check}"/>

        <TextBox HorizontalAlignment="Left" Height="23" Margin="80,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170"
                 Text="{Binding obj.Size}" Style="{StaticResource TextBox}"/>

    </Grid>
</UserControl>
