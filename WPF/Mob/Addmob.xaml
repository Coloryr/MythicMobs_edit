                    <GridViewColumn Header="AI" Width="234" DisplayMemberBinding="{Binding b}"/>
                </GridView>
            </ListView.View>
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="删除" Click="DelectAI_GEvent"/>
                    <MenuItem Header="修改" Click="ChangeAI_GEvent"/>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>
        <ListView HorizontalAlignment="Left" Height="135" Margin="245,505,0,0" VerticalAlignment="Top" Width="290" x:Name="AI_T"
