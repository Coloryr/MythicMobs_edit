                    <GridViewColumn Header="序列" Width="40" DisplayMemberBinding="{Binding a}"/>
                    <GridViewColumn Header="AI" Width="234" DisplayMemberBinding="{Binding b}"/>
                </GridView>
            </ListView.View>
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="删除" Click="DelectAI_TEvent"/>
                    <MenuItem Header="修改" Click="ChangeAI_TEvent"/>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>
        <ListView HorizontalAlignment="Left" Height="135" Margin="540,25,0,0" VerticalAlignment="Top" Width="290" x:Name="Drops_T"
