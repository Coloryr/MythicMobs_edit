<UserControl x:Class="MythicMobs_edit.WPF.Mob.LLAMA"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MythicMobs_edit.WPF.Mob"
             mc:Ignorable="d" Height="300" Width="290">
    <Grid>
        <Label Content="年龄" HorizontalAlignment="Left" Height="25" Margin="5,21,0,0" VerticalAlignment="Top"/>
        <Slider HorizontalAlignment="Left" Height="25" Margin="45,25,0,0" VerticalAlignment="Top" Width="195" Minimum="-1" Maximum="1" LargeChange="0.1" Value="{Binding obj.Age}" TickFrequency="0.1"/>
        <CheckBox Content="锁住年龄" HorizontalAlignment="Left" Margin="5,50,0,0" VerticalAlignment="Top"
            IsChecked="{Binding obj.AgeLock}"/>
        <Label Content="{Binding obj.Age}" HorizontalAlignment="Left" Height="25" Margin="240,25,0,0" VerticalAlignment="Top" Width="40"/>
        <Label Content="骆驼设置" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
