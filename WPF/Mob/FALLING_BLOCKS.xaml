<UserControl x:Class="MythicMobs_edit.WPF.Mob.FALLING_BLOCKS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MythicMobs_edit.WPF.Mob"
             mc:Ignorable="d" Height="300" Width="290">
    <Grid>
        <Label Content="掉落的方块设置" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="100"/>
        <Label Content="方块名字" HorizontalAlignment="Left" Height="25" Margin="10,25,0,0" VerticalAlignment="Top" Width="60"/>
        <TextBox HorizontalAlignment="Left" Height="20" Margin="70,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"
                 Text="{Binding obj.Block}"/>
        <Label Content="方块数据" HorizontalAlignment="Left" Height="25" Margin="10,51,0,0" VerticalAlignment="Top" Width="60"/>
        <TextBox HorizontalAlignment="Left" Height="20" Margin="70,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"
                 Text="{Binding obj.BlockData}" PreviewTextInput="TextCompositionEventArgs"/>

    </Grid>
</UserControl>
