<UserControl x:Class="MythicMobs_edit.WPF.Mob.VILLAGER"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MythicMobs_edit.WPF.Mob"
             mc:Ignorable="d" Height="300" Width="290">
    <Grid>
        <Label Content="村民设置" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource Label}"/>
        <Label Content="村民职业" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" Style="{StaticResource Label}"/>

        <ComboBox HorizontalAlignment="Left" Height="20" Margin="70,27,0,0" VerticalAlignment="Top" Width="135" Style="{StaticResource ComboBoxStyle}"
                  Name="Type" Text="{Binding obj.VillagerType}"/>
        
        <Button Content="随机职业" HorizontalAlignment="Left" Height="20" Margin="210,27,0,0" VerticalAlignment="Top" Width="70"
                Click="Button_Click" Style="{StaticResource Button}"/>

    </Grid>
</UserControl>
