<UserControl x:Class="MythicMobs_edit.WPF.Mob.Mob_type.SILVERFISH"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MythicMobs_edit.WPF.Mob.Mob_type"
             mc:Ignorable="d" Height="300" Width="290">
    <Grid>
        <Label Content="蠹虫设置" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource Label}" Margin="5,0,0,0"/>

        <CheckBox Content="阻止感染方块" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Style="{StaticResource Check}"
                  IsChecked="{Binding obj.PreventBlockInfection}"/>

    </Grid>
</UserControl>
