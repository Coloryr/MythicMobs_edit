<UserControl x:Class="MythicMobs_edit.WPF.Mob.Mob_type.MAGMA_CUBE"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MythicMobs_edit.WPF.Mob.Mob_type"
             mc:Ignorable="d" Height="80.252" Width="319">
    <Grid>
        <Label Content="岩浆怪设置" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource Label}" Margin="5,0,0,0"/>
        <Label Content="岩浆怪尺寸" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Style="{StaticResource Label}"/>

        <CheckBox Content="阻止分裂" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"
                  IsChecked="{Binding obj.PreventSlimeSplit}" Style="{StaticResource Check}"/>

        <TextBox HorizontalAlignment="Left" Height="20" Margin="85,52,0,0" VerticalAlignment="Top" Width="224"
                 Text="{Binding obj.Size}" Style="{StaticResource TextBox}"/>

    </Grid>
</UserControl>
