<UserControl x:Class="MythicMobs_edit.WPF.Mob.Mob_type.FALLING_BLOCKS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MythicMobs_edit.WPF.Mob.Mob_type"
             mc:Ignorable="d" Height="300" Width="319">
    <Grid>
        <Label Content="掉落的方块设置" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource Label}" Margin="5,0,0,0"/>
        <Label Content="方块名字" HorizontalAlignment="Left" Height="25" Margin="10,30,0,0" VerticalAlignment="Top" Style="{StaticResource Label}"/>
        <Label Content="方块数据" HorizontalAlignment="Left" Height="25" Margin="10,60,0,0" VerticalAlignment="Top" Style="{StaticResource Label}"/>

        <TextBox HorizontalAlignment="Left" Height="20" Margin="73,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236"
                 Text="{Binding obj.Block}" Style="{StaticResource TextBox}"/>
        <TextBox HorizontalAlignment="Left" Height="20" Margin="73,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236"
                 Text="{Binding obj.BlockData}" PreviewTextInput="TextCompositionEventArgs" Style="{StaticResource TextBox}"/>

    </Grid>
</UserControl>
