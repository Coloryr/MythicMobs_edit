<UserControl x:Class="MythicMobs_edit.WPF.Mob.Mob_type.BABY_PIG_ZOMBIE"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MythicMobs_edit.WPF.Mob.Mob_type"
             mc:Ignorable="d" Height="83.291" Width="319">
    <Grid>
        <Label Content="小僵尸猪人设置" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource Label}" Margin="5,0,0,0"/>
        <Label Content="加强伤害几率" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Style="{StaticResource Label}"/>
        <Label Content="{Binding obj.ReinforcementsChance}" Height="26" Width="35" HorizontalAlignment="Left" Margin="274,30,0,0" VerticalAlignment="Top" Style="{StaticResource Label}"/>

        <CheckBox Content="是否为愤怒状态" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top"
                  IsChecked="{Binding obj.Angry}" Style="{StaticResource Check}"/>
        <Slider HorizontalAlignment="Left" Margin="97,34,0,0" VerticalAlignment="Top" Width="172" Maximum="1" LargeChange="0.1" TickFrequency="0.1"
                Value="{Binding obj.ReinforcementsChance}"  Style="{StaticResource Slider}"/>

    </Grid>
</UserControl>
